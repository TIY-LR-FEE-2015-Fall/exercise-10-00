<span class="language-count">{{languages.length}} Languages Saved</span>

{{#each languages as |language|}}
  {{input class="language-input language-input--existing" value=language disabled=true}}
  <button class="language-input-delete" data-language="{{language}}" onclick={{action "removeLanguage" language}}>X</button>
{{/each}}

{{input class="language-input language-input--new" value=newLanguage}}
<button class="language-input-save" onclick={{action "addLanguage"}}>+</button>
